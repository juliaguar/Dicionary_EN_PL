  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.english %></td>
    <td><%= word.polish %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Del', word, {:class => 'btn btn-danger'}, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

